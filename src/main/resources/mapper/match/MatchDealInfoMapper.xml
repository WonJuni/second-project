<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.team32ndproject.match.mapper.MatchDealInfoMapper">

    <insert id="insertMatchDealInfo" useGeneratedKeys="true"
            keyColumn="MD_NUM" keyProperty="mdNum"
            parameterType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        INSERT INTO
            MATCH_DEAL_INFO
            (MDS_NUM, MB_NUM, TA_NUM, MD_HOME_NUM, MD_AWAY_NUM, MD_ADDRESS, MD_TYPE, MD_TIME, MD_DATE, MD_MATCH_STATUS)
        VALUES
            (#{mdsNum}, #{mbNum}, #{taNum}, #{mdHomeNum},
             #{mdAwayNum}, #{mdAddress}, #{mdType}, #{mdTime},
             #{mdDate}, #{mdMatchStatus})
    </insert>

    <select id="getMatchDealInfoById" parameterType="int" resultType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        SELECT * FROM MATCH_DEAL_INFO WHERE MD_NUM = #{mdNum}
    </select>

    <select id="getAllMatchDealInfo" resultType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        SELECT * FROM MATCH_DEAL_INFO
    </select>

    <!-- 대기 중인 매치 딜 정보 조회 -->
    <select id="getMatchDealInfoForHomeTeam" parameterType="int" resultType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        SELECT * FROM project.MATCH_DEAL_INFO
        WHERE MD_HOME_NUM = #{mdHomeNum}
          AND MD_MATCH_STATUS = '0'
    </select>

    <!-- 대기 중인 매치 딜 정보 조회 -->
    <select id="getWaitingMatchDealInfoForAwayTeam" parameterType="int" resultType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        SELECT * FROM project.MATCH_DEAL_INFO
        WHERE MD_AWAY_NUM = #{awayTeamNum}
          AND MD_MATCH_STATUS = '0'
    </select>

    <update id="updateMatchDealStatus" parameterType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        UPDATE project.MATCH_DEAL_INFO
        SET MD_MATCH_STATUS = #{mdMatchStatus}
        WHERE MD_NUM = #{mdNum}
    </update>

    <delete id="deleteMatchDealStatus"
            parameterType="com.sp.team32ndproject.match.vo.MatchDealInfoVO">
        DELETE FROM MATCH_DEAL_INFO
        WHERE MD_NUM = #{mdNum}
    </delete>
</mapper>